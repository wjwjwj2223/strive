
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
}

.header {
  /* 保持在固定的位置 */
  position: fixed;
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  box-shadow: 0 0 3px 0 #e3e3e3;
  z-index: 99;
}

.box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 50px;
  height: 68rpx;
  width: 700rpx;
  color: #999999;
}

.icon {
  margin-right: 10px;
  width: 14px;
  height: 14px;
  margin-bottom: -2px;
}

.sub-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  margin-top: 100rpx;
}

.head-img{
  width: 106rpx;
  height: 34rpx;
  margin-top: 40rpx;

}

.books-container {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 90rpx;
}

.v-book {
  margin-bottom: 10rpx;
}
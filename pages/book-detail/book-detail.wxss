/* pages/book-detail/book-detail.wxss */

.container {
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.head {
  display: flex;
  flex-direction: column;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  align-items: center;
  background-color: white;
}

.head_image {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 3px 3px #e3e3e3;
}

.title {
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}

.author {
  font-size: 28rpx;
  color: #999;
}

.sub-container {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  width: 690rpx;
  align-items: center;
  background-color: white;
  padding: 30rpx;
}

.headline {
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
  margin-bottom: 20rpx;
}

.comment-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

/* .comment-container > v-tag:nth-child(1) > view {
  background-color: #fffbdd;
}

.comment-container > v-tag:nth-child(2) > view {
  background-color: #eefbff;
} */

.ex-tag1 {
  background-color: #fffbdd !important;
}

.ex-tag2 {
  background-color: #eefbff !important;
}

.content {
  text-indent: 58rpx;
  font-size: 500;
}

.v-tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}

.num {
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #aaa;
}

.detail-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 28rpx;
  margin-bottom: 100rpx;
  color: #666;
}

.vertical {
  display: flex;
  flex-direction: column;
}

.description {
  color: #999;
  margin-right: 30rpx;
}

.post-container {
  display: flex;
  width: 690rpx;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  box-shadow: 1px -1px 1px #e3e3e3;
  background-color: white;
  padding: 0 30rpx;
}

.post-fake {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  width: 460rpx;
  border: 1px solid #999;
  border-radius: 15px;
  font-size: 22rpx;
  padding-left: 20rpx;
}


.like-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.like {
  margin-right: 30rpx;
  margin-top: 10rpx;
}

.posting-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 999;
}

.post-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  width: 100%;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  font-size: 25rpx;
}

.cancel {
  color: #666;
  padding: 25rpx;
}

.post-header-text {
  font-size: 28rpx;
  color: #bbb;
  padding: 25rpx;
}

.posting-comment-conntainer {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 690rpx;
  padding: 40rpx 30rpx 0  30rpx;
}

.posting-v-tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}

.post {
  width: 690rpx;
  margin : 30rpx auto;
  height: 56rpx;
  background-color: #f5f5f5;
  border-radius: 15rpx;
  padding-left: 25rpx;
}

.shadow {
  color: #999;
}